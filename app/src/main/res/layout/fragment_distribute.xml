<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee">

    <ImageButton
        android:id="@+id/testBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/practise_back_button"
        android:layout_gravity="start" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal"
        android:background="@drawable/practise_rating_button">

        <ImageButton
            android:background="@android:color/transparent"
            android:src="@drawable/ic_help"
            android:id="@+id/testHelpButton"
            android:layout_width="64dp"
            android:layout_height="56dp" />

        <ImageButton
            android:background="@android:color/transparent"
            android:src="@drawable/ic_settings"
            android:id="@+id/testSettingsButton"
            android:layout_width="64dp"
            android:layout_height="56dp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/statistics_dummy_crane"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="В разработке :)"
        android:textSize="18dp" />

    <ImageView
        android:id="@+id/statistics_dummy_crane"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <android.widget.Button
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:id="@+id/statistics_dummy_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/statistics_dummy_crane"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:background="?android:selectableItemBackground"
        android:text="Проверить обновление"
        android:textColor="#5DA62D" />

</RelativeLayout>



